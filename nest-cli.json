{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "apps",
  "monorepo": true,
  "root": "apps",
  "compilerOptions": {
    "webpack": true
  },
  "projects": {
    "attendance-service": {
      "type": "application",
      "root": "apps/attendance-service",
      "entryFile": "main",
      "sourceRoot": "apps/attendance-service/src",
      "compilerOptions": {
        "tsConfigPath": "apps/attendance-service/tsconfig.app.json"
      }
    },
    "auth-service": {
      "type": "application",
      "root": "apps/auth-service",
      "entryFile": "main",
      "sourceRoot": "apps/auth-service/src",
      "compilerOptions": {
        "tsConfigPath": "apps/auth-service/tsconfig.app.json"
      }
    },
    "common": {
      "type": "library",
      "root": "libs/common",
      "entryFile": "index",
      "sourceRoot": "libs/common/src",
      "compilerOptions": {
        "tsConfigPath": "libs/common/tsconfig.lib.json"
      }
    },
    "employee-service": {
      "type": "application",
      "root": "apps/employee-service",
      "entryFile": "main",
      "sourceRoot": "apps/employee-service/src",
      "compilerOptions": {
        "tsConfigPath": "apps/employee-service/tsconfig.app.json"
      }
    },
    "event-service": {
      "type": "application",
      "root": "apps/event-service",
      "entryFile": "main",
      "sourceRoot": "apps/event-service/src",
      "compilerOptions": {
        "tsConfigPath": "apps/event-service/tsconfig.app.json"
      }
    },
    "prisma-events": {
      "type": "library",
      "root": "libs/prisma-events",
      "entryFile": "index",
      "sourceRoot": "libs/prisma-events/src",
      "compilerOptions": {
        "tsConfigPath": "libs/prisma-events/tsconfig.lib.json"
      }
    },
    "prisma-main": {
      "type": "library",
      "root": "libs/prisma-main",
      "entryFile": "index",
      "sourceRoot": "libs/prisma-main/src",
      "compilerOptions": {
        "tsConfigPath": "libs/prisma-main/tsconfig.lib.json"
      }
    }
  }
}